<head><script>!function(){const e=localStorage.getItem("darkMode");("enabled"===e||!e&&window.matchMedia("(prefers-color-scheme: dark)").matches)&&document.documentElement.classList.add("dark-mode")}()</script><link rel="stylesheet" href="styles.css"></head><body><label><input type="checkbox" id="toggleStyles"> Dark Mode</label><script>document.addEventListener("DOMContentLoaded",()=>{const e=document.getElementById("toggleStyles"),t=document.documentElement;function d(d){t.classList.toggle("dark-mode",d),localStorage.setItem("darkMode",d?"enabled":"disabled"),e.checked=d}const o=localStorage.getItem("darkMode");d(o?"enabled"===o:window.matchMedia("(prefers-color-scheme: dark)").matches),e.addEventListener("change",()=>d(e.checked))})</script></body>